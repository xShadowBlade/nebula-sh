{
	"compilerOptions": {
        "jsx": "react",
		"allowJs": true,
		"target": "ES5",
		"module": "Preserve",
		"strict": true,
		"lib": ["ESNext", "dom"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "bundler",
		"baseUrl": "./src",
		"outDir": "./dist",
		"sourceMap": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx", "../../dist/**/*"],
	"exclude": [
	  	"node_modules/"
	]
}
